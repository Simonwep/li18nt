{
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "lib",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "ES2018",
        "strict": true,
        "lib": ["DOM", "ESNext"],
        "baseUrl": ".",
        "paths": {
            "@lib": ["./src/lib"],
            "@shared": ["./src/shared"],
            "@types": ["./src/types.ts"]
        }
    }
}
