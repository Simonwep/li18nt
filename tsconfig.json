{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "lib",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "ES2018",
        "strict": true,
        "lib": ["DOM", "ES2020"],
        "baseUrl": ".",
        "paths": {
            "@utils/*": [
                "./src/utils/*",
                "./src/cli/utils/*"
            ],
            "@tools/*": ["./src/tools/*"],
            "@types": ["./src/types.ts"]
        }
    }
}
