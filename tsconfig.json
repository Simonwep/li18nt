{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "lib",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "ES2018",
        "strict": true,
        "lib": ["DOM", "ES2020"],
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["./src/app/utils/*"],
            "@tools/*": ["./src/app/tools/*"],
            "@types": ["./src/app/types.ts"]
        }
    }
}
